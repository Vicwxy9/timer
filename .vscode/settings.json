{
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "always"
    },
    "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
    "cSpell.words": [
        "Auths",
        "echarts",
        "Hengyang",
        "Kanban"
    ],
    "cSpell.ignorePaths": [
        "package-lock.json",
        "node_modules",
        "vscode-extension",
        ".git/objects",
        ".vscode",
        ".vscode-insiders",
        // Ignore i18n resources
        "src/i18n/message/**/*.json",
    ],
}