{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "commonjs",
        "target": "es5",
        "esModuleInterop": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "paths": {
            "@api/*": [
                "src/api/*"
            ],
            "@app/*": [
                "src/app/*"
            ],
            "@popup/*": [
                "src/popup/*"
            ],
            "@guide/*": [
                "src/guide/*"
            ],
            "@db/*": [
                "src/database/*"
            ],
            "@service/*": [
                "src/service/*"
            ],
            "@entity/*": [
                "src/entity/*"
            ],
            "@util/*": [
                "src/util/*"
            ],
            "@i18n/*": [
                "src/i18n/*"
            ],
            "@i18n": [
                "src/i18n/index"
            ],
            "@echarts/*": [
                "src/echarts/*"
            ],
            "@src/*": [
                "src/*"
            ],
            "*": [
                "types/*"
            ]
        }
    },
    "lib": [
        "dom"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "strict": true,
    "ts-node": {
        "files": true,
        "require": [
            "tsconfig-paths/register"
        ]
    }
}